<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        tools:context=".Fragments.SmokingTobacco">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                style="@style/textHeading"
                android:layout_weight="1"
                android:text="Smoking Tobacco Use" />

            <include
                layout="@layout/tobacco_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@{`Cigarettes`}" />

            <include
                layout="@layout/tobacco_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:title="@{`Cigars`}" />

            <include
                layout="@layout/tobacco_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@{`Pipe`}" />

            <include
                layout="@layout/tobacco_usage"
                app:title="@{`Elecronic Cigarettes`}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    style="@style/textTitle"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="Smoking Status" />

                <include
                    layout="@layout/custom_spinner_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>