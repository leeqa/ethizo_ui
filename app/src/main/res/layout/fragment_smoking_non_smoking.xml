<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.tobacco.SmokingNonSmokingFragment">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/smokingFragment"
        android:name="com.gujranwala.ethizo_ui_muneeb.Fragments.tobacco.SmokingTobacco"
        android:layout_width="match_parent"
        android:tag="smokingFragment"
        android:layout_height="wrap_content" >

    </androidx.fragment.app.FragmentContainerView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nonSmokingFragment"
        android:name="com.gujranwala.ethizo_ui_muneeb.Fragments.tobacco.NonSmokingTobacco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="nonSmokingFragment"/>
    <include
        android:id="@+id/btn_tabaccoUse"
        layout="@layout/save_and_clear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>