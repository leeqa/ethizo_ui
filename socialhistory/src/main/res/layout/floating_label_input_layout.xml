<?xml version="1.0" encoding="utf-8"?>
<com.ethizo.socialhistory.utilities.FloatLabeledEditText
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:textColorHint="@color/summary_text_color"
    app:hintTextAppearance="@style/HintTextLabel">

    <EditText
        android:inputType="textCapSentences"
        android:id="@+id/etFloating"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lines="1"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/imgDateCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="10dp"
        android:contentDescription="asdsadsadsa"
        android:src="@drawable/ic_expand_more_black_18dp"
        android:visibility="gone" />

</com.ethizo.socialhistory.utilities.FloatLabeledEditText>